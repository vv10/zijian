<div class="header">
  <div class="container" style="padding-bottom:40px;">
    <div class=" row">
      <div class="pull-left col-md-3">
        <!-- Logo -->
        <a class="logo" href="index.html">
          <img src="<%= asset_path("logo_2.png") %>" alt="Logo">
        </a>
        <!-- End Logo -->
      </div>
      <div class="pull-right col-md-4" style="padding-top:40px;">
        <%= form_tag search_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag :k, params[:k], class: 'form-control', placeholder: '请输入作品名称或者编号...' %>
            <span class="input-group-btn">
              <%= submit_tag '搜索', class: 'btn-u' %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div><!--/end container-->

  <!-- Collect the nav links, forms, and other content for toggling -->
  <!--/navbar-collapse-->
</div>
<!--=== End Header ===-->

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
  <div class="container">
    <h1 class="pull-left"><%= breadcrumbs_left %></h1>
    <ul class="pull-right breadcrumb">
      <%= breadcrumbs_right %>
    </ul>
  </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->
